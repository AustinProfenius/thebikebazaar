<%- include('../partials/header.ejs')%>
<link rel="stylesheet" href="/css/stylenew.css">
    <title>login</title>
    <%- include('../partials/nav.ejs')%>
    
    <main class="new">
        <%- include('../partials/flash.ejs')%>
    
        <div class="newtextdiv">
            <div class="newh1">
                <h1>BUY AND SELL AT BIKE BAZAAR</h1>
            </div>
            <div class="newp"> 
                <p>Login to the bike selling community!</p>
            </div>
        </div>
    
        <form class="product-form" action = '/users/login' method = 'POST'>
            <div class="form-group">
                <label for="email" class="form-label">Email:</label>
                <input type="email" id="email" name="email" class="form-input" required>
            </div>
    
            <div class="form-group">
                <label for="password" class="form-label">Password:</label>
                <input type="password" id="password" name="password" class="form-input" minlength="8" required>
            </div>
            <button type="submit" class="submit-button">Submit</button>
        </form>
    </main>
<%- include('../partials/footer.ejs')%>